{
  "manifest_version": 3,
  "name": "Automation App",
  "version": "0.0.1",
  "description": "Browser extension for automation and authentication",
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "action": {
    "default_title": "Automation App",
    "default_icon": {
      "16": "assets/icon.png",
      "32": "assets/icon.png",
      "48": "assets/icon.png",
      "64": "assets/icon.png",
      "96": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contents/formInterceptor.ts"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "scripting",
    "activeTab",
    "sidePanel",
    "webNavigation",
    "permissions",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["contents/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "64": "assets/icon.png",
    "96": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
} 